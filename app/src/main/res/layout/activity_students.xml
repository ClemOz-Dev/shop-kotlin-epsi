<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
        <include
            layout="@layout/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/buttonStudent1"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/student_1"
            android:textColor="@color/claire_texte"/>
        <Button
            android:id="@+id/buttonStudent2"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/student_2"
            android:textColor="@color/claire_texte"/>
        <Button
            android:id="@+id/buttonStudent3"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/student_3"
            android:textColor="@color/claire_texte"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
</LinearLayout>